{
  "pathPlugins": "./plugins",
  "pathPipelines": "./pipelines.md",
  "settings": {
    "nlp": {
      "languages": ["en"],
      "trainByDomain": false,
      "threshold": 0.5,
      "autoLoad": true,
      "forceNER": true,
      "autoSave": false,
      "nlu": { "useNoneFeature": true },
      "corpora": [
        "./corpora/test_corpus.json",
        "./corpora/offender_corpus.json"
      ]
    }
  },
  "use": [
    { "className": "logger", "path": "./packages/logger/src" },
    { "className": "Evaluator", "path": "./packages/evaluator/src" },
    { "className": "Template", "path": "./packages/evaluator/src" },
    { "className": "ConsoleConnector", "path": "./packages/console-connector/src" },
    { "className": "Nlp", "path": "./packages/nlp/src" },
    { "className": "LangEn", "path": "./packages/lang-en/src" },
    { "className": "JavascriptCompiler", "path": "./packages/evaluator/src" }
  ]
}